[user]
    email = bob@dobbs.com
    name = JR "Bob" Dobbs
[core]
    autocrlf = false
    safecrlf = true
    editor = vim
[alias]
    cm   = !git add -A && git commit -m
    co   = checkout
    cob  = checkout -b
    dump = cat-file -p
    ec   = config --global -e
    hist = log --pretty=format:'%h %ad | %s%d [%an]' --graph --date=short
    save = !git add -A && git commit -m 'SAVEPOINT'
    st   = status
    type = cat-file -t
    wip  = !git add -A && git commit -m 'WIP'
[color]
    ui = auto
