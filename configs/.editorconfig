root = true

[*]
charset = utf-8
indent_style = space
trim_trailing_whitespace = true
insert_final_newline = true

[*.{c,cpp,cs,cshtml,go,hs,py}]
indent_size = 4

[*.{clj,css,hbs,hh,html,jade,js,json,less,lisp,php,raml,rb,rkt,rtks,sass,scm,scss,swift}]
indent_size = 2

[*.go]
indent_style = tab

[Makefile]
indent_style = tab
